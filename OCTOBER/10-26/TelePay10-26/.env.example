TELEGRAM_BOT_SECRET_NAME=projects/YOUR_PROJECT_ID/secrets/TELEGRAM_BOT_SECRET_NAME/versions/latest
TELEGRAM_BOT_USERNAME=projects/YOUR_PROJECT_ID/secrets/TELEGRAM_BOT_USERNAME/versions/latest

# ----------------------------------------------------------------------------
# NOWPAYMENTS CONFIGURATION
# ----------------------------------------------------------------------------
PAYMENT_PROVIDER_SECRET_NAME=projects/YOUR_PROJECT_ID/secrets/PAYMENT_PROVIDER_TOKEN/versions/latest
NOWPAYMENT_WEBHOOK_KEY=projects/YOUR_PROJECT_ID/secrets/NOWPAYMENT_WEBHOOK_KEY/versions/latest
NOWPAYMENTS_IPN_CALLBACK_URL=projects/YOUR_PROJECT_ID/secrets/NOWPAYMENTS_IPN_CALLBACK_URL/versions/latest

# ----------------------------------------------------------------------------
# PAYMENT FLOW CONFIGURATION
# ----------------------------------------------------------------------------
SUCCESS_URL_SIGNING_KEY=projects/YOUR_PROJECT_ID/secrets/SUCCESS_URL_SIGNING_KEY/versions/latest
WEBHOOK_BASE_URL=projects/YOUR_PROJECT_ID/secrets/WEBHOOK_BASE_URL/versions/latest

# ----------------------------------------------------------------------------
# DATABASE CONFIGURATION (PostgreSQL)
# ----------------------------------------------------------------------------
DATABASE_HOST_SECRET=projects/YOUR_PROJECT_ID/secrets/DATABASE_HOST_SECRET/versions/latest
DATABASE_NAME_SECRET=projects/YOUR_PROJECT_ID/secrets/DATABASE_NAME_SECRET/versions/latest
DATABASE_USER_SECRET=projects/YOUR_PROJECT_ID/secrets/DATABASE_USER_SECRET/versions/latest
DATABASE_PASSWORD_SECRET=projects/YOUR_PROJECT_ID/secrets/DATABASE_PASSWORD_SECRET/versions/latest

# ============================================================================
# NOTES
# ============================================================================
# Replace YOUR_PROJECT_ID with your actual Google Cloud project ID
# All paths should point to Secret Manager secrets in format:
# projects/PROJECT_ID/secrets/SECRET_NAME/versions/VERSION
#
# Common versions:
# - latest (always use the most recent version)
# - 1, 2, 3, etc. (specific version numbers)
